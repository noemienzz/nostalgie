<div class="formulaire-new-game">

  <div class="formulaire-style">

    <%= form_with(model: game) do |form| %>
      <% if game.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

          <ul>
            <% game.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-titre">
        <%= form.label :titre, style: "display: block" %>
        <%= form.text_field :titre %>
      </div>

      <div class="form-date">
        <%= form.label :date, style: "display: block" %>
        <%= form.date_field :date %>
      </div>

      <div class="form-developpeur">
        <%= form.label :developpeur, style: "display: block" %>
        <%= form.text_field :developpeur %>
      </div>

      <div class="form-image">
        <%= form.label :image, style: "display: block" %>
        <%= form.text_area :image %>
      </div>

      <div class="form-description">
        <%= form.label :description, style: "display: block" %>
        <%= form.text_area :description %>
      </div>

      <div class="create">
        <%= form.submit %>
      </div>
    <% end %>

  </div>

</div>